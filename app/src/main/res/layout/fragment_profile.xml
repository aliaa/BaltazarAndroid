<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="18dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="center"
            android:layoutDirection="rtl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_lastName"
                android:layout_gravity="center_vertical|right"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/lblUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical|right"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nickName"
                android:layout_gravity="center_vertical|right"
                android:layout_column="0"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:gravity="center_vertical|right">

                <TextView
                    android:id="@+id/lblNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:maxWidth="150dp"/>

                <ImageView
                    android:id="@+id/btnEditNickName"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:padding="8dp"
                    android:src="@mipmap/ic_edit"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/membershipDuration"
                android:layout_gravity="center_vertical|right"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/lblMyMembershipDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical|right"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myTotalPoints"
                android:layout_gravity="center_vertical|right"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/lblMyTotalPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical|right"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myTotalScore"
                android:layout_gravity="center_vertical|right"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/lblMyTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical|right"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/green"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myCurrentGrade"
                android:layout_gravity="center_vertical|right"
                android:layout_column="0"/>

            <Spinner
                android:id="@+id/spinnerGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/lblMyCurrentFieldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myCurrentField"
                android:layout_gravity="center_vertical|right"
                android:layout_column="0"/>

            <Spinner
                android:id="@+id/spinnerStudyField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical|right"/>
        </GridLayout>

        <Button
            android:id="@+id/btnShowTransaction"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:text="@string/view_coin_transactions"
            android:layout_marginTop="18dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnFillProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:text="@string/fill_profile"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnInviteFriends"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:text="@string/invite_friends_with_prize"
            android:layout_marginTop="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>